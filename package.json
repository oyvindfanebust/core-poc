{
  "name": "core-poc",
  "version": "1.0.0",
  "private": true,
  "description": "Banking ledger PoC with Node.js, TypeScript, TigerBeetle, and PostgreSQL",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@core-poc/core-api",
    "dev:core-api": "npm run dev --workspace=@core-poc/core-api",
    "dev:batch-processor": "npm run dev --workspace=@core-poc/batch-processor",
    "dev:customer-frontend": "npm run dev --workspace=@core-poc/customer-frontend",
    "dev:all": "concurrently \"npm run dev:core-api\" \"npm run dev:batch-processor\" \"npm run dev:customer-frontend\"",
    "dev:backend": "concurrently \"npm run dev:core-api\" \"npm run dev:batch-processor\"",
    "build": "NODE_ENV=production npm run build --workspaces",
    "build:core-api": "npm run build --workspace=@core-poc/core-api",
    "build:batch-processor": "npm run build --workspace=@core-poc/batch-processor",
    "build:customer-frontend": "NODE_ENV=production npm run build --workspace=@core-poc/customer-frontend",
    "test": "npm run test --workspaces",
    "test:core-api": "npm run test --workspace=@core-poc/core-api",
    "test:batch-processor": "npm run test --workspace=@core-poc/batch-processor",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "banking",
    "ledger",
    "tigerbeetle",
    "postgresql",
    "typescript"
  ],
  "author": "",
  "license": "ISC"
}
